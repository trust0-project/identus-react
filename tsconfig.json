{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "node",
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleDetection": "force",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "lib": ["ES2022", "DOM"],
    "jsx": "react",    
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "build", "src/__tests__"]
}
